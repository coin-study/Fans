@model fans.Models.Member.MemberIndexViewModel

<div class="title">
    <i class="fas fa-smile"></i>  會員登記紀錄
</div>

<div class="content content-bkg">
    <table class="table table-hover table-sm" id="userIndexTable">
        <thead>
            <tr>
                <th>#</th>
                <th>User</th>
                <th>Club</th>
                <th>|</th>
                <th>Paid</th>
                <th>Mailed</th>
                <th>Renew</th>
                <th>Register</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var member in Model.Members)
            {
                <tr class="userRow">
                    <td>
                        <a asp-controller="Member" asp-action="Detail" asp-route-id="@member.Id">
                            @member.Id
                        </a>
                    </td>
                    <td>
                        @member.UserName
                    </td>
                    <td>
                        @member.ClubName
                    </td>
                    <td>
                        |
                    </td>
                    <td>
                        T
                    </td>
                    <td>
                        F
                    </td>
                    <td>
                        F
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm btn-block">Go</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>