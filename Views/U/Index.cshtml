@model fans.Models.U.UIndexViewModel

<div class="title">
    <i class="fas fa-smile"></i>  所有會員
</div>

<div class="content content-bkg">
    <table class="table table-hover table-sm table-bordered table-striped table-sortable" id="userIndexTable">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var u in Model.Us)
            {
                <tr class="userRow">
                    <td>
                        @u.Id
                    </td>
                    <td>
                        @u.Name
                    </td>
                    <td>
                        @u.Email
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>